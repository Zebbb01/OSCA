generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NotificationStatus {
  id             Int      @id @default(autoincrement())
  userId         String
  notificationId String   // e.g., "pending-123" or "released-456"
  isRead         Boolean  @default(false)
  readAt         DateTime?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, notificationId])
  @@index([userId])
  @@index([notificationId])
  @@map("notification_status")
}

model User {
  id                String    @id @default(cuid())
  firstName         String
  lastName          String
  middleName        String?
  contactNo         String
  bday              DateTime
  username          String    @unique
  email             String    @unique
  password          String
  emailVerified     DateTime?
  verificationToken String?   @unique
  tokenExpires      DateTime?
  role              Role      @default(USER)
  sessions          Session[]
  notificationStatus NotificationStatus[] // ADD THIS LINE

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

enum Role {
  USER
  ADMIN
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("session")
}

// SENIOR TABLE SCHEMA
model Senior {
  id           Int       @id @default(autoincrement())
  lastname     String
  firstname    String
  middlename   String? // nullable
  email        String? // nullable
  barangay     String
  purok        String
  gender       Gender
  birthdate    DateTime
  age          String
  contact_no   String?
  emergency_no String?
  contact_person String?
  contact_relationship String?
  pwd          Boolean   @default(false)
  low_income          Boolean   @default(false)
  remarks_id   Int       @default(1)
  remarks      Remarks   @relation(fields: [remarks_id], references: [id], onDelete: NoAction)
  deletedAt    DateTime?
  releasedAt   DateTime?

  documents    RegistrationDocument[]
  Applications Applications[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("senior")
}

// REGISTRATION DOCUMENT TABLE SCHEMA
model RegistrationDocument {
  id         Int      @id @default(autoincrement())
  tag        String
  path       String
  public_id  String?
  imageUrl   String?
  file_name  String
  seniors_id Int
  senior     Senior   @relation(fields: [seniors_id], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  benefit_requirement_id Int?
  benefitRequirement     BenefitRequirements? @relation(fields: [benefit_requirement_id], references: [id])

  @@map("registration_document")
}

// REMARKS TABLE SCHEMA
model Remarks {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  order     Int      // New: ordering field
  seniors   Senior[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("remarks")
}


// ------------------------------------ UNMIGRATED TABLES BELOW ---------------------------

model SeniorCategory {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  order        Int            // New: ordering field
  applications Applications[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("senior_category")
}


// REMARKS TABLE SCHEMA
model Status {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  order        Int            // New: ordering field
  applications Applications[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("status")
}


// BENEFIT TABLE SCHEMA
model Benefits {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  tag         String

  applications         Applications[] // ONE BENEFIT CAN BE USED IN MANY APPLICATIONS
  benefit_requirements BenefitRequirements[] // ONE BENEFIT CAN BE USED IN MANY BENEFIT REQUIREMENTS

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("benefits")
}

// BENEFIT TABLE SCHEMA
model BenefitRequirements {
  id                    Int                    @id @default(autoincrement())
  name                  String
  benefitsId            Int
  benefit               Benefits               @relation(fields: [benefitsId], references: [id], onDelete: Cascade)
  registrationDocuments RegistrationDocument[]
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt

  @@map("benefits_requirements")
}

// APPLICATIONS TABLE SCHEMA
model Applications {
  id          Int  @id @default(autoincrement())
  benefit_id  Int
  senior_id   Int
  status_id   Int
  category_id Int?
  rejectionReason String? // Optional field for rejection reason

  senior   Senior          @relation(fields: [senior_id], references: [id], onDelete: Cascade)
  benefit  Benefits        @relation(fields: [benefit_id], references: [id])
  status   Status          @relation(fields: [status_id], references: [id])
  category SeniorCategory? @relation(fields: [category_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([senior_id])
  @@index([benefit_id])
  @@index([status_id])
  @@map("applications")
}

// FINANCIAL TRANSACTION TABLE SCHEMA
model Transaction {
  id          Int      @id @default(autoincrement())
  date        DateTime
  benefits    String
  description String
  amount      Float
  type        TransactionType
  category    String
  seniorName  String?
  barangay    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("transaction")
}

model GovernmentFund {
  id             Int      @id @default(autoincrement())
  currentBalance Float    @default(0)
  lastUpdatedBy  String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("government_fund")
}

model FundHistory {
  id              Int      @id @default(autoincrement())
  date            DateTime
  amount          Float
  from            String
  description     String?
  receiptPath     String?
  receiptUrl      String?
  previousBalance Float
  newBalance      Float
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("fund_history")
}

enum TransactionType {
  released
  pending
}

enum Gender {
  male
  female
}
